name: Pull Request
on:
  pull_request:

jobs:
  pr:
    name: Build and Test
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v1
        with:
          fetch-depth: 1

      - uses: actions/setup-node@v1
        with:
          registry-url: "https://npm.pkg.github.com"

      - run: yarn install
        env:
          NODE_AUTH_TOKEN: ${{ secrets.GH_NPM_TOKEN }}

      - run: yarn build

      - run: yarn test
