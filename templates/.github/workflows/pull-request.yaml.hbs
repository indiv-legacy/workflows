name: Pull Request
on:
  pull_request:

jobs:
  pr:
    name: Build and Test
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v1
        with:
          fetch-depth: 1

      - run: "'//npm.pkg.github.com/:_authToken=$NODE_AUTH_TOKEN' >> .npmrc"

      - run: yarn install
        env:
          NODE_AUTH_TOKEN: ${{ secrets.GH_NPM_TOKEN }}

      - run: yarn build

      - run: yarn test
